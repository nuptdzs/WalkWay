<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <item>
        <shape>
            <solid android:color="@color/white"></solid>
            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>
    </item>
    <item
        android:left="10dp"
        android:right="10dp">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary" />
            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>
    </item>

</layer-list>