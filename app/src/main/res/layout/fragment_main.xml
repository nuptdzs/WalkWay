<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="0.1dp"
    tools:context="com.zk.walkwayapp.view.fragment.MainFragment">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_padding">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black_3b4256"
                    android:text="Calorie"/>
                <TextView
                    android:id="@+id/tv_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_padding"
                    android:textColor="@color/color_orange_f96029"
                    android:textSize="30sp"
                    android:text="0"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_padding">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black_3b4256"
                    android:text="Active Time"/>
                <TextView
                    android:id="@+id/tv_active_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_padding"
                    android:textColor="@color/color_green_3dc187"
                    android:textSize="30sp"
                    android:text="0h 0m"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_padding">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black_3b4256"
                    android:text="KM"/>
                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_padding"
                    android:textColor="@color/avoscloud_blue"
                    android:textSize="30sp"
                    android:text="0.0"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center">
            <com.zk.library.common.ui.ArcProgressBar
                android:id="@+id/progress"
                android:layout_marginTop="@dimen/widget_padding"
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:dottedLineWidth="40"
                app:dottedLineHeight="4"
                app:dottedLineCount="100"
                app:dottedRunColor="@color/blue"
                app:progressTextSize="56"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="60dp"
                    android:textColor="@color/black_3b4255"
                    android:layout_centerHorizontal="true"
                    android:text="Today's Steps"/>
            <TextView
                android:id="@+id/tv_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:textColor="@color/black_3b4255"
                android:text="goal:1000"/>
            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:text="Levelï¼šSedentary"/>
        </RelativeLayout>

</RelativeLayout>
