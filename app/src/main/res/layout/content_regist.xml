<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_regist">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/common_padding"
        android:orientation="vertical"
        android:background="@drawable/login_input_bg"
        >

        <EditText
            android:id="@+id/etRegistName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/common_padding"
            android:drawableLeft="@mipmap/icon_login_name"
            android:drawablePadding="@dimen/widget_padding"
            android:background="@null"
            android:hint="@string/hint_regist_phone"
            android:textSize="14sp"
            android:inputType="phone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/background"/>
        <EditText
            android:id="@+id/etRegistPwd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="14sp"
            android:drawableLeft="@mipmap/icon_login_pwd"
            android:padding="@dimen/common_padding"
            android:drawablePadding="@dimen/widget_padding"
            android:hint="@string/hint_login_pwd"
            android:inputType="textPassword" />
        <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <EditText
                android:id="@+id/etSmsCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="14sp"
                android:drawableLeft="@mipmap/icon_sms_code"
                android:padding="@dimen/common_padding"
                android:drawablePadding="@dimen/widget_padding"
                android:hint="@string/hint_sms_code"
                android:inputType="textPassword" />
            <TextView
                android:id="@+id/tvSmsCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/common_padding"
                android:paddingRight="@dimen/common_padding"
                android:textColor="@color/white"
                android:text="获取验证码"
                android:gravity="center"
                android:background="@color/blue"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/theme_button"
        android:layout_margin="@dimen/common_padding"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="注册"/>
</LinearLayout>
