<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:background="@color/white">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/ll_step_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="@dimen/common_padding_16">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="StepGoal"/>
        <TextView
            android:id="@+id/tv_step_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_weight_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="0.1dp"
        android:background="@color/white"
        android:padding="@dimen/common_padding_16">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="WeightGoal"/>
        <TextView
            android:id="@+id/tv_weight_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60kg"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_margin="@dimen/common_padding"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/theme_btn_bg_selector"
        android:text="save goal"/>
</LinearLayout>
