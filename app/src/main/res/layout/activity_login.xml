<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/big_padding">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/big_padding"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/common_padding"
        android:orientation="vertical"
        android:background="@drawable/login_input_bg"
        >

        <EditText
            android:id="@+id/etLoginName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/common_padding"
            android:drawableLeft="@mipmap/icon_login_name"
            android:drawablePadding="@dimen/widget_padding"
            android:background="@null"
            android:hint="@string/hint_login_name"
            android:textSize="14sp"
            android:inputType="phone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/background"/>
        <EditText
            android:id="@+id/etLoginPwd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="14sp"
            android:drawableLeft="@mipmap/icon_login_pwd"
            android:padding="@dimen/common_padding"
            android:drawablePadding="@dimen/widget_padding"
            android:hint="@string/hint_login_pwd"
            android:inputType="textPassword" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_padding"
        android:layout_marginRight="@dimen/widget_padding">
        <TextView
            android:id="@+id/tvRegist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/widget_padding"
            android:background="?selectableItemBackground"
            android:text="@string/register"/>
        <TextView
            android:id="@+id/tvFindPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/widget_padding"
            android:background="?selectableItemBackground"
            android:text="@string/forget_password"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_padding"
        android:background="@drawable/theme_button"
        android:text="@string/login"
        android:textSize="18sp"
        android:textColor="@color/white"
        />


</LinearLayout>