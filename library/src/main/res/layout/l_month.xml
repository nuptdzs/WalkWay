<?xml version="1.0" encoding="utf-8"?>

<com.lakala.library.calendar.MonthView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/l_month_border_bg"
        >

    <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            style="@style/CalendarTitle"
            />

    <com.lakala.ui.calendar.CalendarGridView
            android:id="@+id/calendar_grid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            >

        <com.lakala.ui.calendar.CalendarRowView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/l_calendar_gray_f2f2f2"
                android:paddingBottom="@dimen/l_calendar_day_headers_paddingbottom"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CalendarCell.DayHeader"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CalendarCell.DayHeader"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CalendarCell.DayHeader"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CalendarCell.DayHeader"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CalendarCell.DayHeader"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CalendarCell.DayHeader"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CalendarCell.DayHeader"
                    />
        </com.lakala.ui.calendar.CalendarRowView>

        <include layout="@layout/l_week"/>

        <include layout="@layout/l_week"/>

        <include layout="@layout/l_week"/>

        <include layout="@layout/l_week"/>

        <include layout="@layout/l_week"/>

        <include layout="@layout/l_week"/>
    </com.lakala.ui.calendar.CalendarGridView>
</com.lakala.library.calendar.MonthView>