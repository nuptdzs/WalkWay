<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingTop="8dp"
    android:orientation="horizontal"
    
     >
    <com.lakala.ui.refreshscrollview.MeiTuanRefreshFirstStepView
        android:id="@+id/first_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
          android:layout_margin="4dp"
        />
    <com.lakala.ui.refreshscrollview.MeiTuanRefreshSecondStepView
        android:id="@+id/second_view"
        android:layout_width="30dp"
        android:visibility="gone"
          android:layout_margin="4dp"
        android:layout_height="30dp"
        />
    <com.lakala.ui.refreshscrollview.MeiTuanRefreshThirdStepView
        android:id="@+id/third_view"
        android:layout_width="30dp"
        android:visibility="gone"
          android:layout_margin="4dp"
        android:layout_height="30dp"
        />
    <TextView 
        android:id="@+id/tv_pull_to_refresh"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textColor="#8c8fa4"
        android:text="努力加载中.."
        />

</LinearLayout>
